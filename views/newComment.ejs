<% include ./partials/header %>

<h1>New Review</h1>

<div class="container">
    <form action="/movies/<%= id %>/comments" method="POST">
        <input type="hidden" name="comment[imdb]" value="<%= id %>" />
        
        <div class="form-group">
            <input class="form-control" type="text" name="comment[name]" placeholder="Name" />
        </div>
        
        <div class="form-group">
            <textarea class="form-control" name="comment[text]" placeholder="Review"></textarea>
        </div>
        
        <button class="btn btn-primary">Submit Review</button>
    </form>
</div>

<% include ./partials/footer %>
